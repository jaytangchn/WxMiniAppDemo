/* pages/sure/sure.wxss */
@import '../mineMes/mineMes.wxss';
.tag{
  background-color: #FFE5C0;
  color: #B9966F;
  font-size: 24rpx;
  display: inline-block;
  margin-right: 10rpx;
  width: 110rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  border-radius: 4rpx;
}

.order-detail-items{
  margin-bottom: 20rpx;
  background-color: #fff;
}
.order-detail-item-hd{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.hd-left{
  width: 100%;
  flex-shrink: 1;
}
.hd-left-top{
  font-size: 32rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: space-between;
}
.hd-left-bottom{
  display: flex;
}
.hd-left-bottom-item{
  flex: 1;
  position: relative;
  font-size: 26rpx;
  color: #999;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 18rpx;
}
.hd-left-bottom-item::after{
  content: '';
  width: 12rpx;
  height: 12rpx;
  border-radius: 90px;
  position: absolute;
  background-color: #999;
  top: 20rpx;
  left: 0;
}
.hd-left-bottom-item.b{
  color: #B9966F;
}
.hd-left-bottom-item.b::after{
   background-color: #B9966F;
}
.toggle-item.open .arrow-right::after{
  background-image: url(data:image/png;base64,);
  background-size: 30rpx 18rpx;
  width: 30rpx;
}
.toggle-item .arrow-right::after{
  background-image: url(data:image/png;base64,);
  background-size: 30rpx 18rpx;
  width: 30rpx;
}
.gray{
  background-color: #FBFBFB;
}
.signle-cell.gray .cell-left{
  color: #333;
}
.tip{
  font-size: 24rpx;
  color: #999;
  text-align: center;
    padding: 30rpx;
  margin-top: 30rpx;
}
.tip image{
  display: inline-block;
  margin-right: 10rpx;
  width: 26rpx;
  height: 26rpx;

}
.mailbox{
  padding: 0 30rpx;
  background-color: #fff;
}
.mailbox .mail-item{
  position: relative;
  padding: 30rpx 0 30rpx 80rpx;
}
.mailbox .mail-item::before{
  content: '';
  position: absolute;
  width: 4rpx;
  height: 100%;
  left: 30rpx;
  bottom: 0;
  background-color: #eee;
}
.mailbox .mail-item:first-child::before{
  height: 50%;
}
.mailbox .mail-item:last-child::before{
  height: 50%;
  bottom: 50%;
}
.mailbox .mail-item::after{
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 90px;
  border: 8rpx solid #eee;
  left: 16rpx;
  top: 50%;
  margin-top: -16rpx;
  background-color: #ccc;
}
.mailbox .mail-item:first-child::after{
  background-color: #B9966F;
  border-color: #FFE5C0
}
.mail-item .content{
  font-size: 30rpx;
  line-height: 50rpx;
}
.mail-item .time{
  color: #777;
  margin-top: 10rpx;
  line-height: 50rpx;
}
/* pages/invoiceEdit/invoiceEdit.wxss */
@import '../checkOrder/checkOrder.wxss';

.tipbox{
  padding: 50rpx 30rpx;
  font-size: 28rpx;
  color: #777777;
  line-height: 1.5
}

.cell-right.spe{
  color: #B9966F;
}
.arrow-right.spe::after{
  background-image: url(data:image/png;base64,)
}
.inc-items{
  overflow: hidden;
}
.inc-items-row{
  display: flex
}
.inc-items-row .inc-item{
  flex: 1;
  margin-top: 30rpx;
  margin-left: 30rpx;
  height: 114rpx;
  text-align: center;
  line-height: 114rpx;
  border: 1rpx solid #B9966F;
  border-radius: 10rpx;
  color: #B9966F;
}
.inc-items-row .inc-item.active{
  color: #fff;
  background-color: #B9966F;
}
.inc-items-row .inc-item.disabled{
  color: #ccc;
  border-color: #ccc;
}
.inc-items-row .inc-item:last-child{
  margin-right: 30rpx;
}
.inc-items .inc-items-row:last-child{
  margin-bottom: 30rpx;
}

.cells .cell-right{
  color:#B9966F;
}

.cells .cell-left{
  color:#000;
}
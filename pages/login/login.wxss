/* pages/login/login.wxss */
.logo-box{
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
.logo-box .logo{
  width: 332rpx;
  height: 108rpx;
}
.login-tip{
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 40rpx;
}

.form-items{
  height: 116rpx;
  position: relative;
   margin: 0 60rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
}
.form-items input{
  width: 100%;
  flex-shrink: 1;
  font-size: 32rpx;
}
.form-items .code-btn{
  flex-shrink: 0;
  margin-right: 10rpx;
  width: 200rpx;
  height: 58rpx;
  line-height: 58rpx;
}
.block-btn-box{
  margin-top: 60rpx;
}
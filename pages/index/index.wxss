/**index.wxss**/
.slide-image{
  width: 100%;
  height: 100%;
}
.index-swiper{
  height: 292rpx;
}
.quick-nav{
  display: flex;
 height: 198rpx;
 align-items: center;
}
.quick-nav-item{
  flex: 1;
  text-align: center;
}
.quick-nav-item image{
  height: 80rpx;
  width: 80rpx;
  display: inline-block;
}
.quick-nav-item text{
  display: block;
  text-align: center
}

.title-block{
  margin-bottom: 36rpx;
  padding-top: 50rpx;
   border-top: 1rpx solid #eee;
}
.title-block text{
  font-size: 36rpx;
  height: 40rpx;
  border-left: 6rpx solid #B9966F;
  line-height: 40rpx;
  padding-left: 20rpx;
}
.scroll-items{
white-space: nowrap;
}
.item-box{
  width: 244rpx;
  height: 412rpx;
  margin-right: 10rpx;
  display: inline-block;
  position: relative;
}
.item-box .item-img{
  width: 244rpx;
  height: 244rpx;
}
.item-box .item-title{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  white-space: normal;
  height: 60rpx;
  line-height: 30rpx;
  margin: 10rpx;
}
.item-box .item-price{
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin: 0 10rpx;
}
.item-box .item-price .em{
  font-size: 24rpx;
  color: #E66363;
}
.item-box .item-price .num{
  font-size: 38rpx;
  color: #E66363;
}
.item-box .item-price .old{
  font-size: 22rpx;
  color: #bbb;
  text-decoration: line-through;
}

.tag{
  position: absolute;
  right: 10rpx;
  top: 0;
  font-size: 26rpx;
  color: #B9966F;
  background-color: #FFE5C0;
  width: 22rpx;
  padding-left:15rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  height: 80rpx;
  border-radius: 0 0 50px 50px;
  writing-mode: vertical-lr;
  overflow: hidden;
}